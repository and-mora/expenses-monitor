				"exec": [
					"Object.prototype.deletePayment = (that, paymentId) => {",
					"    return that.sendRequest({",
					"        url: `${pm.environment.get('host_name')}/api/payment/${paymentId}`,",
					"        method: 'DELETE'",
					"    });",
					"};"
